<h1>Listing units</h1>

<table>
  <thead>
    <tr>
      <th>Unit type</th>
      <th>Name</th>
      <th>Tagline</th>
      <th>Description</th>
      <th>Hours</th>
      <th>Points</th>
      <th>Difficulty</th>
      <th>Online</th>
      <th>Offline</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @units.each do |unit| %>
      <tr>
        <td><%= unit.unit_type %></td>
        <td><%= unit.name %></td>
        <td><%= unit.tagline %></td>
        <td><%= unit.description %></td>
        <td><%= unit.hours %></td>
        <td><%= unit.points %></td>
        <td><%= unit.difficulty %></td>
        <td><%= unit.online %></td>
        <td><%= unit.offline %></td>
        <td><%= link_to 'Show', unit %></td>
        <td><%= link_to 'Edit', edit_unit_path(unit) %></td>
        <td><%= link_to 'Destroy', unit, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

