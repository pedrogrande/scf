<h1>Listing events</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Tagline</th>
      <th>About</th>
      <th>Address1</th>
      <th>Address2</th>
      <th>Suburb</th>
      <th>State</th>
      <th>Postcode</th>
      <th>Country</th>
      <th>Start date time</th>
      <th>End date time</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @events.each do |event| %>
      <tr>
        <td><%= event.title %></td>
        <td><%= event.tagline %></td>
        <td><%= event.about %></td>
        <td><%= event.address1 %></td>
        <td><%= event.address2 %></td>
        <td><%= event.suburb %></td>
        <td><%= event.state %></td>
        <td><%= event.postcode %></td>
        <td><%= event.country %></td>
        <td><%= event.start_date_time %></td>
        <td><%= event.end_date_time %></td>
        <td><%= link_to 'Show', event %></td>
        <td><%= link_to 'Edit', edit_event_path(event) %></td>
        <td><%= link_to 'Destroy', event, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

