<%= simple_form_for(@event) do |f| %>
  <%= f.error_notification %>

  <div class="form-group">
    <%= f.input :title, input_html: { class: 'form-control'} %>
  </div>
  <div class="form-group">
    <%= f.input :tagline, input_html: { class: 'form-control'} %>
  </div>
  <div class="form-group">
    <%= f.input :about, input_html: { class: 'form-control'} %>
  </div>
  <div class="form-group">
    <%= f.input :address1, input_html: { class: 'form-control'} %>
  </div>
  <div class="form-group">
    <%= f.input :address2, input_html: { class: 'form-control'} %>
  </div>
  <div class="form-group">
    <%= f.input :suburb, input_html: { class: 'form-control'} %>
  </div>
  <div class="form-group">
    <%= f.input :state, input_html: { class: 'form-control'} %>
  </div>
  <div class="form-group">
    <%= f.input :postcode, input_html: { class: 'form-control'} %>
  </div>
  <div class="form-group">
    <%= f.input :country, input_html: { class: 'form-control'} %>
  </div>
  <div class="form-group">
    <%= f.input :start_date_time, input_html: { class: 'form-control'} %>
  </div>
  <div class="form-group">
    <%= f.input :end_date_time, input_html: { class: 'form-control'} %>
  </div>

  <div class="form-group">
    <%= f.button :submit %>
  </div>
<% end %>
